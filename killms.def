BootStrap: docker
From: ubuntu:20.04

%post
    apt-get -y update
    ln -s /usr/share/zoneinfo/Asia/Shanghai /etc/localtime
    apt-get -y install tzdata
    apt-get -y install python3-pip
    pip install apt-select
    apt-select --country CN
    rm -f /etc/apt/sources.list
    cp -f sources.list /etc/apt
    apt-get -y update
    apt-get -y dist-upgrade
    apt-get -y install emacs git wget curl software-properties-common cmake
    add-apt-repository -y ppa:deadsnakes/ppa
    apt-get -y update
    apt-get -y install 'python3.7' python3.7-dev
    ln -sf /usr/bin/python3.7 /usr/bin/python3
    
    python3.7 ${SINGULARITY_ROOTFS}/singularity_build/get-pip.py
    python3.7 -m pip install DDFacet
    python3.7 -m pip install ${SINGULARITY_ROOTFS}/singularity_build/killMS.git
    

%files 
    
%environment
    export LC_ALL=C
    export PATH=/usr/local/bin:$PATH

%labels
    Author JhGU

%setup
mkdir ${SINGULARITY_ROOTFS}/singularity_build/
cd ${SINGULARITY_ROOTFS}/singularity_build/
until wget https://bootstrap.pypa.io/get-pip.py
do
sleep 1
done

until git clone https://github.com/saopicc/killMS.git
do
sleep 1
done
